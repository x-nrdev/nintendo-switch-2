---
interface Props {
    position: "top" | "bottom";
    class?: string;
}

const { position, class: className } = Astro.props;

const positionClass =
    position === "top"
        ? "top-24 right-1/4 joystick-blue"
        : "bottom-48 left-1/4 joystick-red";
---

<div
    class=`joystick absolute ${positionClass} w-18 h-18 rounded-full bg-[hsl(220,4%,33%)] `
>
</div>

<style>
    .joystick {
        --joystick-shadow: 0 0 12px 2px black inset;
    }

    .joystick.joystick-blue {
        box-shadow:
            var(--joystick-shadow),
            0 0 2px 2px #53eafd;
    }
    .joystick.joystick-red {
        box-shadow:
            var(--joystick-shadow),
            0 0 2px 2px #fb2c36;
    }
</style>
